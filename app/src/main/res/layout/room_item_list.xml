<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    // 각 ListView에 뿌려진 UI 만듬
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
// 그림과 글자가 가로 방향으로 배치되어 호라이즌 사용
        <ImageView
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:src="@mipmap/ic_launcher"
            android:scaleType="centerCrop"/>
// 이미지뷰 그림은 가로 120dp 적용하고 새로는 쓰는 만큼 센터 크롭 지정
        // 리니어 레이아웃 새로 만들어 글자 구성, 버티칼 지정, 그래비티 지정
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:padding="5dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/priceTxt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="8,000"/>

            <TextView
                android:id="@+id/addressAndFloorTxt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="마포구 서교동,1층"/>

            <TextView
                android:id="@+id/descriptionTxt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="망원/홍대역 풀옵션"/>





        </LinearLayout>



    </LinearLayout>

</LinearLayout>